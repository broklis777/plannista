<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_schedule">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.plannista3.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.plannista3.ui.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_availability"
        android:name="com.example.plannista3.ui.availability.AvailabilityFragment"
        android:label="@string/title_availability"
        tools:layout="@layout/fragment_availability" />
    <fragment
        android:id="@+id/navigation_swap"
        android:name="com.example.plannista3.ui.swap.SwapFragment"
        android:label="@string/title_swap"
        tools:layout="@layout/fragment_swap" />
</navigation>